      document.getElementById('submit_button').disabled = true;
      }
      }
  body.landing
    // Header
    header#header
      h1
        a(href='/') HideIn
      nav#nav
        ul
          li
            a.button.special(href='/') Home
          //li
            //a.button.special(href='login') Login
    // Banner
    section#banner
      h2 HideIn
      center
        form(action='customer-menu', method='post')
          .form-group
            label#textbox Available From
            input#datepicker1(name='available_from', type='date', placeholder='mm/dd/yyyy', required='')
          .form-group
            label#textbox Available Till
            input#datepicker2(name='available_till', type='date', placeholder='mm/dd/yyyy', required='')
          .form-group
            label#textbox Rent
            input(name='rent', type='number', placeholder='Rent in USD', required='')
          .form-group
            label#textbox Location
            input(name='location', type='text', required='')
          .form-group
            label#textbox Description (optional):
            textarea(name='description', rows='3')
            span#message
          .form-group
            label#textbox Select a type
            .class='12u$'
            .select-wrapper
            select#category(name='category')
            option(value='') - Category -
            option(value='apartment') Apartment
            option(value='roommate') Roommates
          .form-group
            .6u(class='12u$(3)')
              input#copy(type='checkbox', name='parking')
              label(for='copy') Parking
            .6u(class='12u$(3)')
